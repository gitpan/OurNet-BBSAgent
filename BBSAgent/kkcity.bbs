kkcity bbs
bbs.kkcity.com.tw

setv separator \x0d\e\[36m(?:─)+.*\x20\x20\e\[m\e\[\d+;1H

=login
wait 代號：
send $[username]\n$[password]\nn\nq\x20q\x20q\x20q\x20q
goto main

=main
send \e[D\e[D\e[D\e[D\e[D\e[Dv\n\e[D
wait 主功能表
till 呼叫器

=logoff
call main
send g\ny\n\n\n\n

=board
call main
send s
wait 英文站名
send $[site]\n
wait 名稱
send $[board]\n\x20\x20
wait 板主：
till 文章閱讀

=board_list_last
call board $[board]
send 1\n\x24
wait \x0d>
till /
exit

=board_article_fetch_first
call board $[board]
send $[article]\n\n
wait \e[2J
till \e[0;34;46m\x20瀏覽\x20P.
  or \e[1;36;44m\x20文章閱讀\e[0;31;47m
till [空白鍵]\e[30m下
wait \e[31m(←)\e[30m結束\x20\x20\e[m
  or \e[31m(←)\e[30m離開\x20\x20\e[m
exit

=board_article_fetch_next
send \x20
till \e[0;34;46m\x20瀏覽\x20P.
  or \e[1;36;44m\x20文章閱讀\e[0;31;47m
till [空白鍵]\e[30m下
wait \e[31m(←)\e[30m結束\x20\x20\e[m
  or \e[31m(←)\e[30m離開\x20\x20\e[m
exit

=board_article_fetch_last
send q
wait 文章閱讀
exit

=article_edit_author
send \x24E\x19\x19\x19\x19\x14\x19\x19\x19\x19\x18\n
wait 文章閱讀
exit

=article_edit_author
send \x24En\n\x19\x19\x19\x19
# 1-3 from,origin 4 --
send \x14\x19\x19\x19\x19
send \x18s\n
wait 文章選讀
exit
